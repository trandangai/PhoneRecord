<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xct.ai.recordcall.Record">

    <CheckBox
        android:id="@+id/cbRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Record" />

    <TextView
        android:id="@+id/tvAudioSource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/audio_source" />

    <Spinner
        android:id="@+id/spinnerAudioSources"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvRecordFileFormat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/record_file_format" />

    <Spinner
        android:id="@+id/spinnerRecordFileFormat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play" />


</LinearLayout>
